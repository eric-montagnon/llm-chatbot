[flake8]
# Maximum line length
max-line-length = 88  # Black's default line length

# Exclude files and directories from checking
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .coverage,
    htmlcov,
    node_modules,
    migrations


# Count the number of occurrences of each error
count = True

# Show the source code for each error
show-source = True

# Show statistics at the end
statistics = True
